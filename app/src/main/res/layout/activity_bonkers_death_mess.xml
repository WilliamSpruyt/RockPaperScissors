<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bonkers_death_mess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="qwerky.rockpaperscissors.BonkersDeathMess">

    <qwerky.rockpaperscissors.BonkersSurfaceView
        android:id="@+id/surfacebonkoid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <qwerky.rockpaperscissors.BonkersView
        android:id="@+id/bonkoid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <TextView
        android:id="@+id/bonkDeathMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="You chose losingThingy.\nThe computer chose winningThingy.\nYou lose.\nwinningThingy batters losingThingy."
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ff0000"
        android:textColorHighlight="@color/colorAccent"
        android:textSize="32dp" />


</RelativeLayout>
